---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ArrowCard from "@components/ArrowCard.astro";
import { PROJECTS } from "@consts";

const resources = (await getCollection("resources")).sort(
  (a, b) => a.data.index - b.data.index
);
---

<Layout title={PROJECTS.TITLE} description={PROJECTS.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <div class="animate font-semibold text-black dark:text-white">
          Resources
        </div>
        <ul class="animate not-prose flex flex-col gap-4">
          {
            resources.map((resource) => (
              <li>
                <ArrowCard entry={resource} />
              </li>
            ))
          }
        </ul>
      </div>
    </aside>
  </Container>
</Layout>
